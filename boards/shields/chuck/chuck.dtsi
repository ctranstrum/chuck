#include <dt-bindings/zmk/matrix_transform.h>
#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include "chuck-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &one_up_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <6>;
        //  3-0  0-1  4-1  1-2            1-3  1-4  0-4  3-5
        //  2-0  5-0  3-1  0-2  4-2  4-3  0-3  3-4  0-5  2-5
        //  1-0  4-0  2-1  5-1  3-2  2-3  5-4  2-4  4-5  1-5
        //                      5-2  5-3
        map = <
            RC(3,0) RC(0,1) RC(4,1) RC(1,2)                 RC(1,3) RC(1,4) RC(0,4) RC(3,5)
            RC(2,0) RC(5,0) RC(3,1) RC(0,2) RC(4,2) RC(4,3) RC(0,3) RC(3,4) RC(0,5) RC(2,5)
            RC(1,0) RC(4,0) RC(2,1) RC(5,1) RC(3,2) RC(2,3) RC(5,4) RC(2,4) RC(4,5) RC(1,5)
                                            RC(5,2) RC(5,3)
        >;
    };

    encoder: encoder {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <72>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder>;
        triggers-per-rotation = <24>;
    };

    input_processors {
        zip_scroll_scalar: zip_scroll_scalar {
            compatible = "zmk,input-processor-scalar";
            #input-processor-cells = <2>;
            type = <INPUT_EV_REL>;
            codes = <INPUT_REL_WHEEL INPUT_REL_HWHEEL>;
            track-remainders;
        };
    };
};

